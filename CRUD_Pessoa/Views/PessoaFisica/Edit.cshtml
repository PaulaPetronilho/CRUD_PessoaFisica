@model CRUD_Pessoa.Models.PessoaFisicaModel

@{
    ViewBag.Title = "Alterar";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Página para alterar o perfil</title>
    <link href="~/Scripts/PessoaStyle.css" rel="stylesheet" />
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h2>Alterar o perfil</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)
            <div style="padding-left: 5%">
                <div class="form-group" style="margin-top: 50px">
                    <div class="row g-3 align-items-center">
                        <div class="col-2">
                                @Html.LabelFor(model => model.NomeCompleto, htmlAttributes: new { @class = "control-label" })
                        </div>
                        <div class="col-auto">
                            <input type="text" id="nomeCompleto" name="nomeCompleto" value="@Model.NomeCompleto">
                            <span class="highlight"></span>
                            <span class="bar"></span>
                        </div>
                        <div class="col-auto">
                            @Html.ValidationMessageFor(model => model.NomeCompleto, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row g-3 align-items-center">
                        <div class="col-2">
                                @Html.LabelFor(model => model.DataNascimento, htmlAttributes: new { @class = "control-label col-md-2" })
                        </div>
                        <div class="col-auto">
                            <input type="text" id="dataNascimento" name="DataNascimento" value="@Model.DataNascimento">
                            <span class="highlight"></span>
                            <span class="bar"></span>
                        </div>
                        <div class="col-auto">
                            @Html.ValidationMessageFor(model => model.DataNascimento, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row g-3 align-items-center">
                        <div class="col-2">
                                @Html.LabelFor(model => model.ValorRenda, htmlAttributes: new { @class = "control-label col-md-2" })
                        </div>
                        <div class="col-auto">
                            <input type="text" id="valor" name="ValorRenda" value="@Model.ValorRenda">
                            <span class="highlight"></span>
                            <span class="bar"></span>
                        </div>
                        <div class="col-auto">
                            @Html.ValidationMessageFor(model => model.ValorRenda, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row g-3 align-items-center">
                        <div class="col-2">
                                @Html.LabelFor(model => model.CPF, htmlAttributes: new { @class = "control-label col-md-2" })
                        </div>
                        <div class="col-auto">
                            <input type="text" id="cpf" name="CPF" value="@Model.CPF">
                            <span class="highlight"></span>
                            <span class="bar"></span>
                        </div>
                        <div class="col-auto">
                            @Html.ValidationMessageFor(model => model.CPF, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div class="botao-bottom">
                <div class="form-group">
                    <div class="row g-3 align-items-center" style="padding-left: 5%">
                        <div class="col-auto">
                            @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-primary btn-edit" })
                        </div>
                        <div class="col-auto">
                            <input type="submit" value="Salvar" class="btn btn-success btn-edit" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</body>
</html>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js")
    @Scripts.Render("https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js")
    @Scripts.Render("~/Scripts/site.js")
}