@model CRUD_Pessoa.Models.PessoaFisicaModel

@{
    ViewBag.Title = "Detalhes Da Pessoa Física";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Página De Detalhes Da Pessoa Física</title>
    <link href="~/Scripts/PessoaStyle.css" rel="stylesheet" />
</head>
<body>
    <div>
        @Html.AntiForgeryToken()
        <div>
            <h2>Detalhes</h2>
            <hr />
            <div class="topoTabela">
                <div class="form-group">
                    <div class="row g-3 align-items-center">
                        <div class="col-2">
                            @Html.DisplayNameFor(model => model.NomeCompleto)
                        </div>
                        <div class="col-auto">
                            <input type="text" id="nomeCompleto" name="nomeCompleto" value="@Model.NomeCompleto" disabled>
                            <span class="highlight"></span>
                            <span class="bar"></span>
                        </div>
                        <div class="col-auto">
                            @Html.ValidationMessageFor(model => model.NomeCompleto, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row g-3 align-items-center">
                        <div class="col-2">
                            @Html.LabelFor(model => model.DataNascimento, htmlAttributes: new { @class = "control-label col-md-2" })
                        </div>
                        <div class="col-auto">
                            <input type="text" id="dataNascimento" name="DataNascimento" value="@Model.DataNascimento" disabled>
                            <span class="highlight"></span>
                            <span class="bar"></span>
                        </div>
                        <div class="col-auto">
                            @Html.ValidationMessageFor(model => model.DataNascimento, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row g-3 align-items-center">
                        <div class="col-2">
                            @Html.DisplayNameFor(model => model.ValorRenda)
                        </div>
                        <div class="col-auto">
                            <input type="text" id="valorRenda" name="ValorRenda" value="@Model.ValorRenda" disabled>
                            <span class="highlight"></span>
                            <span class="bar"></span>
                        </div>
                        <div class="col-auto">
                            @Html.ValidationMessageFor(model => model.ValorRenda, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row g-3 align-items-center">
                        <div class="col-2">
                            @Html.DisplayNameFor(model => model.CPF)
                        </div>
                        <div class="col-auto">
                            <input type="text" id="cpf" name="CPF" value="@Model.CPF" disabled>
                            <span class="highlight"></span>
                            <span class="bar"></span>
                        </div>
                        <div class="col-auto">
                            @Html.ValidationMessageFor(model => model.CPF, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="botao-bottom">
            <div class="form-group">
                @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-primary btn-edit" })
            </div>
        </div>
    </div>
</body>
</html>