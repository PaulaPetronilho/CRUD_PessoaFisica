@model IEnumerable<CRUD_Pessoa.Models.PessoaFisicaModel>

@{
    ViewBag.Title = "Principal";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Página Principal</title>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link href="~/Scripts/PessoaStyle.css" rel="stylesheet" />
</head>
<body>

    <p>
        @Html.ActionLink("Criar Novo Perfil", "Create", null, new { @class = "btn btn-primary btn-edit" })
    </p>
    <div>
        <div class="tabela-scroll">
            <table class="table table-hover">
                <tr class="table-active  tabela-cabecalho">
                    <th style="text-align: center;">
                        @Html.DisplayNameFor(model => model.NomeCompleto)
                    </th>
                    <th style="text-align: center;">
                        @Html.DisplayNameFor(model => model.DataNascimento)
                    </th>
                    <th style="text-align: center;">
                        @Html.DisplayNameFor(model => model.ValorRenda)
                    </th>
                    <th style="text-align: center;">
                        @Html.DisplayNameFor(model => model.CPF)
                    </th>
                    <th>&nbsp;</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="linhasDaTabelaPrincipal">
                            @Html.DisplayFor(modelItem => item.NomeCompleto)
                        </td>
                        <td class="linhasDaTabelaPrincipal">
                            @if (item.DataNascimento != null)
                            {
                                @item.DataNascimento.ToString("dd/MM/yyyy")
                            }
                        </td>
                        <td class="linhasDaTabelaPrincipal">
                            @Html.DisplayFor(modelItem => item.ValorRenda)
                        </td>
                        <td class="linhasDaTabelaPrincipal">
                            @Html.DisplayFor(modelItem => item.CPF)
                        </td>
                        <td>
                            <a href="/PessoaFisica/Edit/@item.ID" class="links btn btn-primary">
                                <i class="fa fa-pencil"></i>
                            </a>
                            <a href="/PessoaFisica/Details/@item.ID" class="links btn btn-primary">
                                <i class="fa fa-search"></i>
                            </a>
                            <a href="/PessoaFisica/Delete/@item.ID" class="links btn btn-primary fixed-trash">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>

    @section Scripts {
        @Scripts.Render("~/Scripts/site.js")
    }
</body>
</html>